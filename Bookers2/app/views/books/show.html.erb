<main>
<% if flash[:notice] %>
<p id="notice">
  <%= flash[:notice] %>
</p>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
<%= render 'users/user info', user: @user %>
<%= render "books/new book", book: @newbook %>
</div>

<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table">
  <tbody>
    <tr>
      <td>
         <%= image_tag @book.user.get_profile_image(104,105.5)  %><br>
         <%= link_to @book.user.name, user_path(@book.user.id) %>
      </td>
<td>
  <%= link_to  @book.title %>
</td>

<td>
  <%= @book.body %>
</td>
<% if @book.user.id == current_user.id %>
<td>
 <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %>
</td>
<td>
  <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？",  class: "btn btn-sm btn-danger" %>
</td>
<% end %>
</tr>
</tbody>
</table>

</div>
</div>
</div>
</main>
